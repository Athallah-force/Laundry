<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="10dp"
    app:cardCornerRadius="15dp"
    android:id="@+id/card_tambahkan"
    app:cardElevation="5dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="10dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal"
            android:background="@drawable/rounded">

            <TextView
                android:id="@+id/tv_id_label_tambahkan"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/card_data_tambahkan_id"
                android:textColor="@android:color/white"
                android:textStyle="bold"
                android:padding="10dp"
                android:paddingStart="10dp"
                android:paddingTop="5dp"/>

            <TextView
                android:id="@+id/tv_id_tambahkan"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="-"
                android:textColor="@android:color/white"
                android:textAppearance="@style/TextAppearance.AppCompat"
                android:layout_marginStart="10dp">

            </TextView>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal">

            <!-- Nama Layanan -->
            <TextView
                android:id="@+id/tv_label_nama_tambahkan"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/card_data_tambahkan_nama"
                android:textStyle="bold"
                android:padding="10dp"
                android:textSize="16sp"
                android:textColor="?attr/colorOnSurface"/>

            <TextView
                android:id="@+id/tv_nama_tambahkan"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="-"
                android:textSize="16sp"
                android:textAppearance="@style/TextAppearance.AppCompat"
                android:textColor="?attr/colorOnSurface"
                android:layout_marginStart="10dp"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/tv_label_harga"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/card_data_tambahkan_harga"
                android:textSize="16sp"
                android:textStyle="bold"
                android:padding="10dp"
                android:textColor="?attr/colorOnSurface"/>

            <TextView
                android:id="@+id/tv_harga"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="-"
                android:textSize="16sp"
                android:textColor="?attr/colorOnSurface"
                android:textAppearance="@style/TextAppearance.AppCompat"
                android:layout_marginStart="10dp"/>



        </LinearLayout>

    </LinearLayout>

</androidx.cardview.widget.CardView>
