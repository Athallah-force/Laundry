<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="30dp"
    android:background="@drawable/desain"
    tools:context="tambahkan.Tambah_tambahkan">


    <TextView
        android:id="@+id/fab_tambah_tambahkan"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="@string/tambah_tambahan"
        android:textSize="20sp"
        android:textStyle="bold"
        android:gravity="center"
        android:textColor="#ffff"
        android:shadowColor="@color/black"
        android:shadowRadius="10"
        android:layout_marginTop="20dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginBottom="16dp" />

    <TextView
        android:id="@+id/tv_nama_tambahkan"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/tambahan_nama"
        android:textColor="?attr/colorOnSurface"
        android:layout_margin="10dp"
        android:textSize="16dp"
        android:textStyle="bold"
        android:layout_marginTop="30dp"
        app:layout_constraintTop_toBottomOf="@+id/fab_tambah_tambahkan"
        />
    <EditText
        android:id="@+id/et_nama_tambahkan"
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:hint="@string/masukkan_tambahan"
        android:layout_margin="10dp"
        android:background="@drawable/retangle"
        android:padding="12dp"
        android:textColor="?attr/colorOnSurface"
        android:layout_marginTop="16dp"
        app:layout_constraintTop_toBottomOf="@id/tv_nama_tambahkan"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginBottom="12dp" />

    <TextView
        android:id="@+id/tv_harga"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/tambahan_harga"
        android:layout_margin="10dp"
        android:textSize="16dp"
        android:textColor="?attr/colorOnSurface"
        android:textStyle="bold"
        android:layout_marginTop="30dp"
        app:layout_constraintTop_toBottomOf="@+id/et_nama_tambahkan"
        />
    <EditText
        android:id="@+id/et_harga"
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:hint="@string/masukkan_harga"
        android:background="@drawable/retangle"
        android:padding="12dp"
        android:layout_margin="10dp"
        android:layout_marginTop="16dp"
        android:textColor="?attr/colorOnSurface"
        android:inputType="numberDecimal"
        app:layout_constraintTop_toBottomOf="@id/tv_harga"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginBottom="12dp" />


    <Button
        android:id="@+id/bt_simpan_tambahkan"
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:text="@string/tambah_pelanggan"
        android:textColor="@color/white"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="30dp"
        android:backgroundTint="#578FCA"
        app:layout_constraintTop_toBottomOf="@id/et_harga"
        />

</androidx.constraintlayout.widget.ConstraintLayout>