<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/main"
    android:background="@drawable/desain"
    android:padding="24dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <!-- Judul -->
        <TextView
            android:id="@+id/tv_tambah_pelanggan"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/tambah_pelanggan_judul"
            android:textSize="24sp"
            android:textStyle="bold"
            android:textColor="#FFFFFF"
            android:gravity="center"
            android:layout_marginBottom="32dp" />

        <!-- Nama Lengkap -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginBottom="16dp">

            <TextView
                android:id="@+id/tv_namalengkap"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:paddingStart="20dp"
                android:layout_weight="1"
                android:text="@string/tambah_pelanggan_nama"
                android:textSize="16sp"
                android:textStyle="bold" />

            <EditText
                android:id="@+id/et_namalengkap"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="2"
                android:hint="@string/tambah_pelanggan_nama"
                android:background="@drawable/retangle"
                android:padding="12dp" />
        </LinearLayout>

        <!-- Alamat -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginBottom="16dp">

            <TextView
                android:id="@+id/tv_alamat"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:paddingStart="20dp"
                android:layout_weight="1"
                android:text="@string/tambah_pelanggan_alamat"
                android:textSize="16sp"
                android:textStyle="bold" />

            <EditText
                android:id="@+id/et_alamat"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="2"
                android:hint="@string/tambah_pelanggan_alamat"
                android:background="@drawable/retangle"
                android:padding="12dp" />
        </LinearLayout>

        <!-- No HP -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginBottom="32dp">

            <TextView
                android:id="@+id/tv_nohp"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:paddingStart="20dp"
                android:layout_weight="1"
                android:text="@string/tambah_pelanggan_no"
                android:textSize="16sp"
                android:textStyle="bold" />

            <EditText
                android:id="@+id/et_nohp"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="2"
                android:hint="@string/tambah_pelanggan_no"
                android:maxLength="14"
                android:inputType="phone"
                android:background="@drawable/retangle"
                android:padding="12dp" />
        </LinearLayout>

        <!-- Tombol Simpan -->
        <Button
            android:id="@+id/bt_simpan"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/tambah_pelanggan"
            android:layout_gravity="center"
            android:backgroundTint="#578FCA" />

    </LinearLayout>
</ScrollView>
