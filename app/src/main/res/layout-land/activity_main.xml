<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    android:background="@drawable/landscap"
    android:padding="15dp"
    android:id="@+id/main"
    tools:context=".MainActivity">

    <!-- Sapaan-->
    <TextView
        android:id="@+id/greeting"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/sapaan_main"
        android:textSize="24sp"
        android:textColor="#ffffff"
        android:shadowColor="@color/black"
        android:shadowDx="4"
        android:shadowDy="4"
        android:shadowRadius="3"
        android:textStyle="bold"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginStart="20dp"
        android:layout_marginTop="10dp" />

    <!-- Tanggal-->

    <TextView
        android:id="@+id/date"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/tanggal_main"
        android:textSize="20sp"
        android:textColor="@color/white"
        android:shadowColor="@color/black"
        android:shadowDx="4"
        android:shadowDy="4"
        android:shadowRadius="10"
        android:textStyle="bold"
        android:layout_marginTop="10dp"
        android:layout_marginEnd="10dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@id/greeting"
        android:layout_marginStart="320dp"/>

    <!-- CardView Estimasi Hari Ini -->
    <androidx.cardview.widget.CardView
        android:id="@+id/card_estimation"
        android:layout_width="250dp"
        android:layout_height="300dp"
        app:cardCornerRadius="8dp"
        app:cardElevation="4dp"
        android:backgroundTint="#fff"
        app:cardMaxElevation="20dp"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginStart="20dp"
        app:layout_constraintTop_toBottomOf="@id/greeting"
        android:layout_marginTop="10dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:elevation="50dp"
                android:orientation="horizontal">
                <TextView
                    android:id="@+id/label_estimation"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/estimasi"
                    android:textSize="16sp"
                    android:layout_marginTop="10dp"
                    android:layout_marginStart="10dp"
                    android:textColor="#ffffff"
                    android:shadowColor="@color/black"
                    android:shadowDx="4"
                    android:shadowDy="4"
                    android:shadowRadius="3"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/amount_estimation"
                    android:layout_width="150dp"
                    android:layout_height="wrap_content"
                    android:text="Rp. -,-"
                    android:textSize="16sp"
                    android:textColor="#ffffff"
                    android:shadowColor="@color/black"
                    android:shadowDx="4"
                    android:shadowDy="4"
                    android:shadowRadius="3"
                    android:textStyle="bold"
                    android:layout_marginStart="30dp"
                    android:layout_marginTop="10dp"/>
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_marginStart="15dp"
                android:layout_marginTop="16dp">

                <androidx.cardview.widget.CardView
                    android:id="@+id/card2"
                    android:backgroundTint="#fff"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:layout_marginTop="20dp"
                        android:orientation="horizontal">

                        <ImageView
                            android:id="@+id/img4"
                            android:layout_width="60dp"
                            android:layout_height="60dp"
                            android:src="@drawable/account" />

                        <TextView
                            android:id="@+id/tvcard2"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/akun"
                            android:textSize="15sp"
                            android:textStyle="bold"
                            android:textColor="#ffffff"
                            android:shadowColor="@color/black"
                            android:shadowDx="4"
                            android:shadowDy="4"
                            android:shadowRadius="3"
                            android:layout_marginStart="30dp"
                            android:layout_marginTop="25dp" />
                    </LinearLayout>

                </androidx.cardview.widget.CardView>


                <androidx.cardview.widget.CardView
                    android:id="@+id/card5"
                    android:backgroundTint="#fff"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:layout_marginTop="20dp"
                        android:orientation="horizontal">

                        <ImageView
                            android:id="@+id/img7"
                            android:layout_width="60dp"
                            android:layout_height="60dp"
                            android:src="@drawable/karyawan" />

                        <TextView
                            android:id="@+id/tvcard5"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/pegawai"
                            android:textSize="15sp"
                            android:textColor="#ffffff"
                            android:shadowColor="@color/black"
                            android:shadowDx="4"
                            android:shadowDy="4"
                            android:shadowRadius="3"
                            android:textStyle="bold"
                            android:layout_marginStart="30dp"
                            android:layout_marginTop="25dp" />
                    </LinearLayout>

                </androidx.cardview.widget.CardView>


                <androidx.cardview.widget.CardView
                    android:id="@+id/card6"
                    android:backgroundTint="#fff"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:layout_marginTop="20dp"
                        android:orientation="horizontal">

                        <ImageView
                            android:id="@+id/img8"
                            android:layout_width="60dp"
                            android:layout_height="60dp"
                            android:src="@drawable/toko" />

                        <TextView
                            android:id="@+id/tvcard6"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/cabang"
                            android:textSize="15sp"
                            android:textColor="#ffffff"
                            android:shadowColor="@color/black"
                            android:shadowDx="4"
                            android:shadowDy="4"
                            android:shadowRadius="3"
                            android:textStyle="bold"
                            android:layout_marginStart="30dp"
                            android:layout_marginTop="25dp" />
                    </LinearLayout>


                </androidx.cardview.widget.CardView>

            </LinearLayout>
        </LinearLayout>
    </androidx.cardview.widget.CardView>


    <!-- Card Layout -->
    <androidx.cardview.widget.CardView
        android:id="@+id/transaksi"
        android:layout_width="140dp"
        android:layout_height="140dp"
        app:cardCornerRadius="20dp"
        android:layout_marginTop="55dp"
        android:layout_marginStart="15dp"
        android:backgroundTint="#fff"
        app:cardElevation="20dp"
        app:layout_constraintStart_toEndOf="@id/card_estimation"
        app:layout_constraintTop_toTopOf="parent">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/uang"
                android:layout_width="match_parent"
                android:layout_height="80dp"
                android:src="@drawable/uang"
                android:layout_marginTop="10dp"/>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/transaksi"
                android:textColor="#ffffff"
                android:shadowColor="@color/black"
                android:shadowDx="4"
                android:shadowDy="4"
                android:shadowRadius="3"
                android:textAlignment="center"
                android:textSize="15sp"
                android:textStyle="bold"
                android:layout_marginTop="10dp"
                android:textAppearance="@style/TextAppearance.AppCompat.Title" />
        </LinearLayout>
    </androidx.cardview.widget.CardView>
    <androidx.cardview.widget.CardView
        android:id="@+id/card3"
        android:layout_width="140dp"
        android:layout_height="140dp"
        app:cardCornerRadius="20dp"
        android:layout_marginTop="55dp"
        android:layout_marginStart="15dp"
        android:backgroundTint="#fff"
        app:layout_constraintStart_toEndOf="@id/transaksi"
        app:layout_constraintTop_toTopOf="parent">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/img5"
                android:layout_width="match_parent"
                android:layout_height="80dp"
                android:src="@drawable/laundry"
                android:layout_marginTop="10dp"/>
            <TextView
                android:id="@+id/tvcard3"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/layanan"
                android:textAlignment="center"
                android:textSize="15sp"
                android:textStyle="bold"
                android:textColor="#ffffff"
                android:shadowColor="@color/black"
                android:shadowDx="4"
                android:shadowDy="4"
                android:shadowRadius="3"
                android:textAppearance="@style/TextAppearance.AppCompat.Title"
                android:layout_marginTop="10dp"/>
        </LinearLayout>
    </androidx.cardview.widget.CardView>
    <androidx.cardview.widget.CardView
        android:id="@+id/card4"
        android:layout_width="140dp"
        android:layout_height="140dp"
        android:layout_marginTop="55dp"
        app:cardCornerRadius="20dp"
        android:layout_marginStart="5dp"
        android:backgroundTint="#fff"
        app:cardElevation="20dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/card3"
        app:layout_constraintTop_toTopOf="parent">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/img6"
                android:layout_width="match_parent"
                android:layout_height="80dp"
                android:src="@drawable/plus"
                android:layout_marginTop="10dp"/>
            <TextView
                android:id="@+id/tvcard4"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/tambahan"
                android:textAlignment="center"
                android:textColor="#ffffff"
                android:shadowColor="@color/black"
                android:shadowDx="4"
                android:shadowDy="4"
                android:shadowRadius="3"
                android:textSize="15sp"
                android:textStyle="bold"
                android:textAppearance="@style/TextAppearance.AppCompat.Title"
                android:layout_marginTop="10dp"/>
        </LinearLayout>
    </androidx.cardview.widget.CardView>
    <androidx.cardview.widget.CardView
        android:id="@+id/laporan"
        android:layout_width="140dp"
        android:layout_height="140dp"
        app:cardCornerRadius="20dp"
        android:layout_marginTop="15dp"
        android:layout_marginStart="15dp"
        android:backgroundTint="#fff"
        app:cardElevation="20dp"
        app:layout_constraintStart_toEndOf="@id/pelanggan"
        app:layout_constraintTop_toBottomOf="@id/card3">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/doc"
                android:layout_width="match_parent"
                android:layout_height="80dp"
                android:src="@drawable/report"
                android:layout_marginTop="10dp"/>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/laporan"
                android:textAlignment="center"
                android:textSize="15sp"
                android:textStyle="bold"
                android:textColor="#ffffff"
                android:shadowColor="@color/black"
                android:shadowDx="4"
                android:shadowDy="4"
                android:shadowRadius="3"
                android:textAppearance="@style/TextAppearance.AppCompat.Title"
                android:layout_marginTop="10dp"/>
        </LinearLayout>
    </androidx.cardview.widget.CardView>
    <androidx.cardview.widget.CardView
        android:id="@+id/pelanggan"
        android:layout_width="140dp"
        android:layout_height="140dp"
        app:cardCornerRadius="20dp"
        android:layout_marginTop="15dp"
        android:layout_marginStart="15dp"
        android:backgroundTint="#fff"
        app:cardElevation="20dp"
        app:layout_constraintTop_toBottomOf="@+id/transaksi"
        app:layout_constraintStart_toEndOf="@id/card_estimation">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/orang"
                android:layout_width="match_parent"
                android:layout_height="80dp"
                android:src="@drawable/cus"
                android:layout_marginTop="10dp"/>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/pelanggan"
                android:textAlignment="center"
                android:textSize="15sp"
                android:textColor="#ffffff"
                android:shadowColor="@color/black"
                android:shadowDx="4"
                android:shadowDy="4"
                android:shadowRadius="3"
                android:textStyle="bold"
                android:textAppearance="@style/TextAppearance.AppCompat.Title"
                android:layout_marginTop="10dp"/>
        </LinearLayout>
    </androidx.cardview.widget.CardView>
    <androidx.cardview.widget.CardView
        android:id="@+id/card7"
        android:layout_width="140dp"
        android:layout_height="140dp"
        android:layout_marginTop="15dp"
        app:cardCornerRadius="20dp"
        android:layout_marginStart="5dp"
        android:backgroundTint="#fff"
        app:cardElevation="20dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/laporan"
        app:layout_constraintTop_toBottomOf="@+id/card4">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/img9"
                android:layout_width="match_parent"
                android:layout_height="80dp"
                android:src="@drawable/cetak"
                android:layout_marginTop="10dp"/>
            <TextView
                android:id="@+id/tvcard7"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/printer"
                android:textAlignment="center"
                android:textSize="15sp"
                android:textColor="#ffffff"
                android:shadowColor="@color/black"
                android:shadowDx="4"
                android:shadowDy="4"
                android:shadowRadius="3"
                android:textStyle="bold"
                android:textAppearance="@style/TextAppearance.AppCompat.Title"
                android:layout_marginTop="10dp"/>
        </LinearLayout>


    </androidx.cardview.widget.CardView>








</androidx.constraintlayout.widget.ConstraintLayout>
